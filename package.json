{
  "name": "node-express-boilerplate",
  "version": "1.0.0",
  "private": true,
  "main": "dist/bin/main.js",
  "scripts": {
    "start": "better-npm-run start",
    "clean": "rimraf dist",
    "lint": "esw '{src,test}/**/*.ts'",
    "lint:watch": "npm run lint -- -w",
    "dev": "better-npm-run dev",
    "build": "better-npm-run build",
    "test": "mocha --require ts-node/register 'test/**/*.spec.ts'",
    "test:watch": "npm test -- -w",
    "leasot": "leasot '{src,test}/**/*.ts' || true",
    "check:all": "npm run lint && npm test",
    "hooks:install": "node ./node_modules/husky/bin/install",
    "precommit": "npm run check:all"
  },
  "betterScripts": {
    "start": {
      "command": "node dist/bin/main.js",
      "env": {
        "NODE_ENV": "production"
      }
    },
    "dev": {
      "command": "npm run clean && npm run check:all && nodemon --watch 'src/**/*.ts' --exec ts-node src/bin/main.js",
      "env": {
        "NODE_ENV": "development",
        "DEBUG": "myapp:*"
      }
    },
    "build": {
      "command": "npm run clean && npm run check:all && tsc",
      "env": {
        "NODE_ENV": "production"
      }
    }
  },
  "dependencies": {
    "basicauth-middleware": "^3.1.0",
    "better-npm-run": "^0.1.1",
    "body-parser": "^1.19.0",
    "compression": "^1.7.4",
    "connect-history-api-fallback": "^1.6.0",
    "cookie-parser": "^1.4.4",
    "cors": "^2.8.5",
    "debug": "^4.1.1",
    "dotenv": "^8.0.0",
    "express": "^4.17.1",
    "express-winston": "^3.2.1",
    "helmet": "^3.19.0",
    "morgan": "^1.9.1",
    "serve-index": "^1.9.1",
    "sha1": "^1.1.1",
    "winston": "^3.2.1"
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^1.13.0",
    "@typescript-eslint/parser": "^1.13.0",
    "cash-true": "0.0.2",
    "chai": "^4.2.0",
    "eslint": "^6.1.0",
    "eslint-config-airbnb-base": "^13.2.0",
    "eslint-plugin-import": "^2.18.2",
    "eslint-watch": "^6.0.0",
    "husky": "^3.0.1",
    "leasot": "^8.0.0",
    "mocha": "^6.2.0",
    "nodemon": "^1.19.1",
    "rimraf": "^2.6.3",
    "sinon": "^7.3.2",
    "supertest": "^4.0.2",
    "ts-node": "^8.3.0",
    "typescript": "^3.5.3"
  },
  "engines": {
    "node": ">=6",
    "npm": ">=3.3"
  }
}
