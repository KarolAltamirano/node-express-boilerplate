{
  "name": "nodeExpressBoilerplate",
  "version": "0.0.0",
  "private": true,
  "main": "dist/bin/main.js",
  "scripts": {
    "start": "better-npm-run start",
    "clean": "rimraf dist",
    "lint": "esw 'src/**'",
    "lint-watch": "npm run lint -- -w",
    "dev": "better-npm-run dev",
    "build": "better-npm-run build",
    "test": "mocha --compilers js:babel-register test/**/*.spec.js",
    "test-watch": "npm run test -- -w"
  },
  "betterScripts": {
    "start": {
      "command": "node dist/bin/main.js",
      "env": {
        "NODE_ENV": "production"
      }
    },
    "dev": {
      "command": "npm run clean && nodemon --exec babel-node -- src/bin/main.js",
      "env": {
        "NODE_ENV": "development"
      }
    },
    "build": {
      "command": "npm run clean && npm run lint && babel src -d dist",
      "env": {
        "NODE_ENV": "production"
      }
    }
  },
  "dependencies": {
    "body-parser": "^1.15.2",
    "compression": "^1.6.2",
    "cookie-parser": "^1.4.3",
    "cors": "^2.7.1",
    "debug": "^2.2.0",
    "express": "^4.14.0",
    "express-history-api-fallback": "^2.0.0",
    "morgan": "^1.7.0"
  },
  "devDependencies": {
    "babel-cli": "^6.11.4",
    "babel-core": "^6.11.4",
    "babel-plugin-transform-object-rest-spread": "^6.8.0",
    "babel-preset-es2015-node4": "^2.1.0",
    "babel-register": "^6.9.0",
    "better-npm-run": "0.0.9",
    "chai": "^3.5.0",
    "eslint": "^3.1.1",
    "eslint-watch": "^2.1.13",
    "mocha": "^2.5.3",
    "nodemon": "^1.9.2",
    "rimraf": "^2.5.4",
    "sinon": "^1.17.4"
  }
}
