{
  "name": "node-express-boilerplate",
  "version": "0.3.0",
  "private": true,
  "main": "dist/bin/main.js",
  "scripts": {
    "start": "better-npm-run start",
    "clean": "rimraf dist",
    "lint": "esw 'src/**/*'",
    "lint:watch": "yarn run lint -- -w",
    "dev": "better-npm-run dev",
    "build": "better-npm-run build",
    "test": "mocha --compilers js:babel-register 'test/**/*.spec.js'",
    "test:watch": "yarn run test -- -w",
    "leasot": "leasot '{src,test}/**/*.js' || true",
    "check:all": "yarn run lint && yarn run test",
    "hooks:install": "node ./node_modules/husky/bin/install",
    "precommit": "yarn run check:all"
  },
  "betterScripts": {
    "start": {
      "command": "node dist/bin/main.js",
      "env": {
        "NODE_ENV": "production"
      }
    },
    "dev": {
      "command": "yarn run check:all && yarn run clean && nodemon --exec babel-node -- src/bin/main.js",
      "env": {
        "NODE_ENV": "development",
        "DEBUG": "myapp:*"
      }
    },
    "build": {
      "command": "yarn run check:all && yarn run clean && babel src -s -d dist",
      "env": {
        "NODE_ENV": "production"
      }
    }
  },
  "dependencies": {
    "basicauth-middleware": "^2.0.0",
    "better-npm-run": "0.0.15",
    "body-parser": "^1.17.1",
    "compression": "^1.6.2",
    "connect-history-api-fallback": "^1.3.0",
    "cookie-parser": "^1.4.3",
    "cors": "^2.8.3",
    "debug": "^2.6.3",
    "dotenv": "^4.0.0",
    "express": "^4.15.2",
    "express-winston": "^2.3.0",
    "helmet": "^3.5.0",
    "morgan": "^1.8.1",
    "serve-index": "^1.8.0",
    "sha1": "^1.1.1",
    "winston": "^3.2.1"
  },
  "devDependencies": {
    "@types/basicauth-middleware": "^3.1.1",
    "@types/compression": "^0.0.36",
    "@types/connect-history-api-fallback": "^1.3.2",
    "@types/cookie-parser": "^1.4.1",
    "@types/cors": "^2.8.5",
    "@types/debug": "^4.1.4",
    "@types/dotenv": "^6.1.1",
    "@types/express": "^4.17.0",
    "@types/express-winston": "^3.0.3",
    "@types/helmet": "^0.0.43",
    "@types/mocha": "^5.2.7",
    "@types/morgan": "^1.7.36",
    "@types/node": "^12.6.8",
    "@types/serve-index": "^1.7.29",
    "@types/sha1": "^1.1.2",
    "@types/supertest": "^2.0.8",
    "babel-cli": "^6.24.1",
    "babel-core": "^6.24.1",
    "babel-eslint": "^7.2.2",
    "babel-preset-node6": "^11.0.0",
    "babel-preset-stage-0": "^6.24.1",
    "babel-register": "^6.24.1",
    "cash-true": "0.0.2",
    "chai": "^3.5.0",
    "eslint": "^3.19.0",
    "eslint-config-airbnb-base": "^11.1.3",
    "eslint-plugin-import": "^2.2.0",
    "eslint-watch": "^3.1.0",
    "husky": "^0.13.3",
    "leasot": "^4.3.1",
    "mocha": "^3.2.0",
    "nodemon": "^1.11.0",
    "rimraf": "^2.6.1",
    "sinon": "^2.1.0",
    "supertest": "^3.0.0",
    "typescript": "^3.5.3"
  },
  "engines": {
    "node": ">=6",
    "npm": ">=3.3"
  }
}
